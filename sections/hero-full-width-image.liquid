{% schema %}
{
	"name": "Hero (Full Width Image)",
	"settings": [
		{
			"type": "richtext",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Background Image"
		}
	],
	"presets": [{
		"name": "Hero (Full Width Image)",
		"category": "Page"
	}]
}
{% endschema %}




<div class="py-10 relative overflow-hidden md:min-h-[80vh] flex flex-col justify-center items-center">
    <div
        data-component="image"
        class="image absolute inset-0">
        <picture class="blur-xl scale-110">
            <source
                data-srcset="{{ section.settings.background_image | image_url: width: 2000 }}"
                media="(min-width: 1200px)">
            <source
                data-srcset="{{ section.settings.background_image | image_url: width: 1400 }}"
                media="(min-width: 1000px)">
            <source
                data-srcset="{{ section.settings.background_image | image_url: width: 1200 }}"
                media="(min-width: 800px)">
            
            {% assign lqip = section.settings.background_image | format: 'jpg' | image_url: width: 10 %}
            <img
                src="{{ lqip }}"
                data-src="{{ section.settings.background_image | image_url: width: 800 }}"
                alt="{{ section.settings.background_image.alt }}"
            />
        </picture>
    </div>

    <div class="px-container-mobile md:px-container-desktop relative z-1 text-white text-center">
        <div class="max-w-grid mx-auto">
            <div class="flex flex-col gap-2">
               <div class="flex flex-col gap-1 md:gap-0 rich-text font-serif rich-text-bold-sans-regular text-36/36 md:text-70/70">
					{{ section.settings.title  }}
				</div>
            </div>
        </div>
    </div>
</div>
