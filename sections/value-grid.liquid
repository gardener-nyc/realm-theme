{% schema %}
{
	"name": "Value Grid",
	"blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker", 
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [{
		"name": "Value Grid",
		"category": "Marketing"
	}]
}
{% endschema %}


<div class="my-4 md:my-6 px-container-mobile md:px-container-desktop">
    <div class="mx-auto max-w-grid">
        <div class="grid gap-4 md:grid-cols-3 gap-x-gutter-mobile md:gap-gutter-desktop">
            {% for value in section.blocks %}
                <div class="flex flex-col gap-1 md:gap-2 justify-between">
                    <div class="flex flex-col gap-1 md:gap-2">
                        <div class="bg-green text-white text-center p-1 md:p-2">
                            <p class="uppercase text-24/30 md:text-36/42">
                                {{ value.settings.title }}
                            </p>
                        </div>
                        <div class="rich-text line-break">
                            {{ value.settings.description }}
                        </div>
                    </div>

                    <div
                        data-component="image"
                        class="image block w-full aspect-[3/4]">
                        <picture class="blur-xl scale-110">
                            <source
                                data-srcset="{{ value.settings.image | image_url: width: 1200 }}"
                                media="(min-width: 800px)">
                            
                            {% assign lqip = value.settings.image | format: 'jpg' | image_url: width: 10 %}
                            <img
                                src="{{ lqip }}"
                                data-src="{{ value.settings.image | image_url: width: 800 }}"
                                alt="{{ value.settings.image.alt }}"
                            />
                        </picture>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>